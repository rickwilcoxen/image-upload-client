<div class="container text-center h-100">
  <div class="card-body">
    <h5 class="card-title">{{category.title}}</h5>
    <form data-id="{{category._id}}" class="col lg-2 update-form">
      <div class="form-group">
        <input type="text" name="text" class="form-control" required="required" value="{{category.text}}">
      </div>
      <div class="form-group">
        <input class="btn btn-primary btn-block" type="submit" value="Update">
      </div>
    </form>
  </div>
</div>
